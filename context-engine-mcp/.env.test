# Test configuration for Context Engine MCP

# Google Cloud Configuration (using test/demo credentials)
GOOGLE_CLOUD_PROJECT=demo-project
GOOGLE_PROJECT_ID=demo-project
GOOGLE_LOCATION=us-central1

# Deployment Mode
DEPLOYMENT_MODE=local

# For testing, we'll mock the Google API
GOOGLE_API_KEY=test-api-key
VERTEX_AI_LOCATION=us-central1

# Mock Anthropic API
ANTHROPIC_API_KEY=test-anthropic-key

# Local Database (using H2 for testing)
DB_TYPE=h2
DB_URL=jdbc:h2:mem:testdb
DB_USER=sa
DB_PASSWORD=

# Model Configuration - all using mock providers for testing
MODEL_CODE_SEARCH=mock-gemini-flash
MODEL_CONTEXT_OPTIMIZE=mock-gemini-flash
MODEL_CODE_INDEX=mock-gemini-flash
MODEL_DEPENDENCY_ANALYSIS=mock-gemini-pro
MODEL_SECURITY_SCAN=mock-claude-opus
MODEL_CODE_GENERATION=mock-claude-sonnet

# Local Model Paths (mock)
GOOGLE_NANO_MODEL_PATH=/tmp/mock-gemini-nano

# Performance Settings
LLM_ROUTER_PREFER_LOCAL=true
MAX_CONCURRENT_USERS=10
CACHE_TTL_SECONDS=3600

# Multi-Tenant Configuration
MAX_ORGS=10
MAX_PROJECTS_PER_ORG=5
MAX_SUBPROJECTS_PER_PROJECT=5

# Queue Configuration (in-memory for testing)
QUEUE_TYPE=memory

# Monitoring and Logging
LOG_LEVEL=DEBUG
ENABLE_METRICS=true

# MCP Server Configuration
MCP_SERVER_PORT=50051
MCP_MAX_MESSAGE_SIZE=1048576

# Test mode flag
TEST_MODE=true