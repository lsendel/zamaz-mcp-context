# Context Engine MCP - Environment Variables Template
# Copy this to .env and update with your values

# Required: Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-project-id

# Authentication (choose one method)
# Method 1: Use gcloud CLI (recommended)
GOOGLE_APPLICATION_CREDENTIALS=~/.config/gcloud/application_default_credentials.json

# Method 2: Service Account Key
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Method 3: API Key (less secure)
# GOOGLE_API_KEY=your-api-key-here

# Optional: Other LLM Providers
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Model Configuration
DEFAULT_MODEL=gemini-flash
COMPLEX_MODEL=gemini-pro
ADVANCED_MODEL=claude-3

# Cost Limits
MAX_REQUEST_COST=0.01
DAILY_COST_LIMIT=10.00
MONTHLY_COST_LIMIT=300.00

# Performance
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/mcp-server.log

# Server Configuration
NODE_ENV=production
PORT=8080